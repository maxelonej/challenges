doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width", initial-scale=1.0)
    title Frontend Mentor | QR code component
    link(rel="icon", type="image/png", sizes="32x32", href="./images/favicon-32x32.png")
    link(rel="stylesheet", href="styles.css")
  body 
    .content 
      img.content__qr(src="/qr-code-component/images/image-qr-code.png", alt="FrontendMentor QR code")
      .content__description
        h3.content__description__header Improve your front-end skills by building projects
        p.content__description__text Scan the QR code to visit Frontend Mentor and take your coding skills to the next level
